
.wrap {
  background: pink;
}
.header {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 36rpx;
  position: relative;
}
.banner {
  width: 100%;
  height: 30%;
}
.back {
  position: absolute;
  font-size: 26rpx;
  width: 80rpx;
  height: 36rpx;
  border: 2rpx solid #000000;
  z-index: 999;
  right: 20rpx;
  text-align: center;
  top: 20rpx;
  line-height: 34rpx;
}
swiper {
  height: 100%;
}
.block {
  overflow-y: auto;
  margin-top: 10rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  overflow: auto;
}
.classify {
  width: 80%;
  margin: 0 auto;
  background: #ffffff;
  height: 1000rpx;
  display: flex;
  flex-direction: column;
}
.tab_1 {
  height: 100rpx;
  display: flex;
  text-align: center;
  width: 100%;
  line-height: 100rpx;
}
.tab_1 ._span {
  flex: 1;
  border-bottom: 2rpx solid #cccccc;
  border-left: 2rpx solid #cccccc;
}
.active {
  background: rgb(48, 173, 148);
  color: #ffffff;
}
.user_1 {
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  width: 98%;
  height: 90%;
  margin-top: 40rpx;
  border: 2rpx solid #000000;
}
.img_1 {
  width: 90%;
  height: 100%;
  margin: 0 auto;
}
.text {
  flex: 1;
  display: flex;
  width: 40%;
  margin-left: 50%;
  color: rgb(48, 173, 148);
}
.iconfont {
  color: black;
  height: 60rpx;
  line-height: 60rpx;
}
.name_1 {
  line-height: 60rpx;
}